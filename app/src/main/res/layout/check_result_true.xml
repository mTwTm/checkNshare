<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FF37966F"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:showIn="@layout/activity_share">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="16.59dp"
            android:layout_height="16.61dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            app:srcCompat="@drawable/ic_btn_check_mark" />

        <TextView
            android:id="@+id/textView"
            style="@style/CheckResult.Title"
            android:text="@string/check_result_title_true"
            tools:text="@string/check_result_title_true" />

        <Button
            android:id="@+id/btn_share"
            style="@style/CheckResult.ActionButton"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/action_share_item"
            tools:text="@string/action_share_item" />
    </LinearLayout>
</androidx.cardview.widget.CardView>